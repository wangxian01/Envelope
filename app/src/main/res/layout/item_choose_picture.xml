<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_picture_choose"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_picture_delete"
        android:layout_width="@dimen/distance_16"
        android:layout_height="@dimen/distance_16"
        android:src="@drawable/svg_cancel"
        app:layout_constraintBottom_toTopOf="@+id/item_picture_choose"
        app:layout_constraintEnd_toEndOf="@+id/item_picture_choose"
        app:layout_constraintStart_toEndOf="@+id/item_picture_choose"
        app:layout_constraintTop_toTopOf="@+id/item_picture_choose"
        tools:ignore="UnknownId,VectorDrawableCompat" />
</android.support.constraint.ConstraintLayout>