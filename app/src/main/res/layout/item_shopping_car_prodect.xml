<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/item_shopping_checkbox_prodect_choose"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:button="@drawable/checkbox_shopping_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_marginLeft="@dimen/distance_8"
        android:id="@+id/item_shopping_img_picture"
        android:layout_width="@dimen/distance_64"
        android:layout_height="@dimen/distance_64"
        android:layout_marginTop="@dimen/distance_6"
        android:src="@mipmap/ico_red_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_shopping_checkbox_prodect_choose"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/item_shopping_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_6"
        android:layout_marginTop="@dimen/distance_12"
        android:text="新鲜现切水果"
        android:textColor="@color/color_grey0"
        android:textSize="@dimen/font_14"
        app:layout_constraintLeft_toRightOf="@id/item_shopping_img_picture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_shopping_tv_specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_6"
        android:text="300g"
        android:textColor="@color/color_grey0"
        android:textSize="@dimen/font_14"
        app:layout_constraintLeft_toRightOf="@id/item_shopping_img_picture"
        app:layout_constraintTop_toBottomOf="@id/item_shopping_tv_name" />

    <TextView
        android:id="@+id/item_shopping_tv_product_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_6"
        android:text="¥ 12"
        android:textColor="@color/orange"
        android:textSize="@dimen/font_14"
        app:layout_constraintLeft_toRightOf="@id/item_shopping_img_picture"
        app:layout_constraintTop_toBottomOf="@id/item_shopping_tv_specification" />

    <LinearLayout
        android:background="@drawable/shape_white_border_bg"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/item_shopping_tv_subtract"
            android:layout_width="@dimen/distance_26"
            android:layout_height="@dimen/distance_26"
            android:padding="@dimen/distance_4"
            android:src="@mipmap/ic_subtract_black" />

        <View
            android:layout_marginRight="@dimen/distance_10"
            android:layout_marginLeft="@dimen/distance_4"
            android:layout_width="@dimen/distance_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/distance_4"
            android:layout_marginBottom="@dimen/distance_4"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/item_shopping_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/colorBlack_font"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_marginRight="@dimen/distance_4"
            android:layout_marginLeft="@dimen/distance_10"
            android:layout_width="@dimen/distance_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/distance_4"
            android:layout_marginBottom="@dimen/distance_4"
            android:background="@color/colorBlack" />

        <ImageView
            android:id="@+id/item_shopping_tv_add"
            android:layout_width="@dimen/distance_26"
            android:layout_height="@dimen/distance_26"
            android:padding="@dimen/distance_4"
            android:src="@mipmap/ic_add_black" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>