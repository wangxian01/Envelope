<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="@dimen/distance_40"
    android:paddingRight="@dimen/distance_40"
    tools:context=".login.LoginActivity">

    <com.example.envelope.utils.CircleImageView
        android:layout_width="@dimen/distance_160"
        android:layout_height="@dimen/distance_160"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/distance_70"
        android:src="@mipmap/ico_red_start" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_20">

        <TextView
            android:id="@+id/login_tv_paw"
            android:layout_width="@dimen/distance_120"
            android:layout_height="@dimen/distance_40"
            android:background="@drawable/tv_login_bg"
            android:gravity="center"
            android:text="密码登录"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/login_tv_vc"
            android:layout_width="@dimen/distance_120"
            android:layout_height="@dimen/distance_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="验证码登录"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_16" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_40"
        android:layout_marginTop="@dimen/distance_20">

        <EditText
            android:id="@+id/login_et_account"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@mipmap/geren"
            android:drawablePadding="@dimen/distance_8"
            android:gravity="center_vertical"
            android:hint="请输入账号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/color_font_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_1"
            android:layout_gravity="bottom"
            android:background="@color/main_bg" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_40"
        android:layout_marginTop="@dimen/distance_16">

        <EditText
            android:id="@+id/login_et_wd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toStartOf="@id/login_tv_getvc"
            android:layout_toLeftOf="@id/login_tv_getvc"
            android:background="@null"
            android:drawableLeft="@mipmap/mima54"
            android:drawablePadding="@dimen/distance_8"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:textColor="@color/color_black_tran_50"
            android:textColorHint="@color/color_font_hint"
            android:textSize="14sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/login_tv_getvc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tv_getvc_bg"
            android:clickable="true"
            android:paddingLeft="@dimen/distance_10"
            android:paddingTop="@dimen/distance_5"
            android:paddingRight="@dimen/distance_10"
            android:paddingBottom="@dimen/distance_5"
            android:text="获取验证码"
            android:textColor="@color/colorWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_1"
            android:layout_alignParentBottom="true"
            android:background="@color/main_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_rt_register"
        android:layout_marginTop="@dimen/distance_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/distance_4"
            android:layout_toLeftOf="@id/login_tv_register"
            android:id="@+id/login_tv_forget_pwd"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_14"
            android:text="忘记密码?"
            android:layout_marginRight="@dimen/distance_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingTop="@dimen/distance_4"
            android:layout_marginRight="@dimen/distance_5"
            android:layout_toLeftOf="@id/login_tv_register"
            android:textColor="@color/color_font_hint"
            android:textSize="@dimen/font_14"
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="@dimen/distance_4"
            android:layout_alignParentRight="true"
            android:id="@+id/login_tv_register"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_14"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/login_tv_lg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/distance_40"
        android:layout_marginTop="@dimen/distance_40"
        android:layout_marginRight="@dimen/distance_40"
        android:background="@drawable/bt_login_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingTop="@dimen/distance_10"
        android:paddingBottom="@dimen/distance_10"
        android:text="登录"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_30">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/login_tv_other"
            android:background="@color/main_bg" />

        <TextView
            android:layout_marginRight="@dimen/distance_16"
            android:layout_marginLeft="@dimen/distance_16"
            android:id="@+id/login_tv_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="第三方登录"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/login_tv_other"
            android:background="@color/main_bg" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/login_wx"
        android:layout_width="@dimen/distance_70"
        android:layout_height="@dimen/distance_70"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/distance_30"
        android:src="@mipmap/weixin" />
</LinearLayout>